{% extends 'base.html.twig' %}

{% block title %}{{ name }}{% endblock %}

{% block body %}
    <div class="container">
        <h2>Мои подписчики</h2>
        <ul class="list-group bg-light">
            {% for user in users %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="col-sm">
                        {{ user.nickname }}
                    </div>
                    <div class="col col-lg-2">
                        <div class="btn-group">
                            <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('user_show', {'id': user.id}) }}">показать</a>
                        </div>
                    </div>

                </li>
            {% else %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <p>Нет подписчиков</p>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
