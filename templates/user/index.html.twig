{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <h1>Пользователи</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>nickname</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            {% if not (user.id == curUser.id) %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nickname }}</td>
                <td>{{ user.description }}</td>

                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">показать</a>
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="4">записи не найдены</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
