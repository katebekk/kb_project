{% extends 'base.html.twig' %}

{% block title %}Избранное{% endblock %}

{% block body %}
    <h1>Избранное</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Фото</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for heart in hearts %}
            <tr>
                <td><img src="{{ asset('uploads/') ~ heart.getPost.getImg }}" width="200"></td>
                <td>
                    <a href="{{ path('post_show', {'id': heart.getPost.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}